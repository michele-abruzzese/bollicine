<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/View/Catalogo/CatalogoView.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ProdottoControl</servlet-name>
        <servlet-class>Control.Product_Manager.ProdottoControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProdottoControl</servlet-name>
        <url-pattern>/Prodotto</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetImmagineControl</servlet-name>
        <servlet-class>Control.GetImmagineControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetImmagineControl</servlet-name>
        <url-pattern>/GetImmagine</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategorieControl</servlet-name>
        <servlet-class>Control.Product_Manager.CategorieConrol</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategorieControl</servlet-name>
        <url-pattern>/Categorie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProdottoSingoloControl</servlet-name>
        <servlet-class>Control.Product_Manager.ProdottoSingoloControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProdottoSingoloControl</servlet-name>
        <url-pattern>/ProdottoSingolo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddInCartControl</servlet-name>
        <servlet-class>Control.Product_Manager.AddInCartControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddInCartControl</servlet-name>
        <url-pattern>/AddInCart</url-pattern>
    </servlet-mapping>

</web-app>